<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zz_order_history_item_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="46dp"
    android:paddingRight="46dp" >

    <TextView
        android:id="@+id/zz_tv_order_item_name"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/zz_tv_order_item_type"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#eeb829"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/zz_tv_order_item_price"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#d2762a" />

    <TextView
        android:id="@+id/zz_tv_order_item_id"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:gravity="left"
         android:textSize="20sp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/zz_tv_order_item_starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/zz_tv_order_item_endtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="14sp"
            android:gravity="left"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>