<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_382"
    android:layout_height="@dimen/px_169"
    android:background="@color/black_80"
    android:paddingLeft="@dimen/px_50"
    android:paddingRight="@dimen/px_50"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_43"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_22"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_50"
			android:focusable="true"            
            android:background="@drawable/selector_btn"
            android:layout_marginRight="@dimen/px_25"
            android:text="是"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_50"
            android:layout_marginLeft="@dimen/px_25"
            android:background="@drawable/selector_btn"
            android:text="否"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_24" />
    </LinearLayout>

</LinearLayout>