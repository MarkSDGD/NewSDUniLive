<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_backplay_item"
    android:layout_width="@dimen/px_658"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    android:minHeight="@dimen/px_57"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_backplay_current"
        android:layout_width="@dimen/px_20"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/px_110"
        android:src="@drawable/backplay_current" />

    <!-- android:visibility="invisible" -->

    <TextView
        android:id="@+id/tv_backplay_time"
        android:layout_width="@dimen/px_80"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:focusable="false"
        android:gravity="right"
        android:text="16:08"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24" />

    <com.xike.xkliveplay.view.AlwaysMarqueeTextView
        android:id="@+id/tv_backplay_name"
        android:layout_width="@dimen/px_240"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_34"
        android:ellipsize="marquee"
        android:focusable="false"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="转播中央电视台新闻联播"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_30" />

</LinearLayout>