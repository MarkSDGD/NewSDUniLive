<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:gravity="center"
    android:minHeight="@dimen/resee_date_height"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_backplay_date"
        android:layout_width="@dimen/resee_date_md_width"
        android:layout_height="wrap_content"
        android:singleLine="true"
       	android:gravity="right|center_vertical"
        android:focusable="false"
        android:text="1月23日"
        android:textColor="@color/white"
        android:textSize="@dimen/resee_date_text_size"
         />

    <TextView
        android:id="@+id/tv_backplay_week"
        android:layout_width="@dimen/resee_date_week_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/resee_date_week_margin_left"
        android:gravity="left|center_vertical"
        android:focusable="false"
        android:textColor="@color/white"
        android:singleLine="true"
        android:text="星期一"
        android:textSize="@dimen/resee_date_text_size" />

</LinearLayout>