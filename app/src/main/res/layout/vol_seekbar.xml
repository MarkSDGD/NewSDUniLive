<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_vol_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_vol_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_4"
            android:src="@drawable/vol_icon" />

        <SeekBar
            android:id="@+id/sb_vol"
            android:layout_width="@dimen/vol_seekbar_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_2"
            android:background="@color/nocolor"
            android:focusable="false"
            android:max="100"
            android:maxHeight="@dimen/px_14"
            android:minHeight="@dimen/px_14"
            android:progress="50"
            android:progressDrawable="@drawable/vol_seekbar_style"
            android:thumb="@drawable/vol_indicator"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/vol_tv"
            android:layout_width="@dimen/px_50"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_18"
            android:text="78"
            android:textColor="@color/white"
            android:textSize="@dimen/vol_text_size" />
    </LinearLayout>

</RelativeLayout>