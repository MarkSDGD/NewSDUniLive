<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MSeekBar">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textBackground" format="reference" />
        <attr name="textOrientation" format="enum">
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <!--wangfangxu-->
    <!-- 顶层控件属性 -->
    <declare-styleable name="MainUpView">
        <attr name="upImageRes"  format="reference" />
        <attr name="shadowImageRes"  format="reference" />
    </declare-styleable>
    <!--wangfangxu-->
    
    <declare-styleable name="LoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension"/>
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension"/>
        <attr name="indicatorName" format="string"/>
        <attr name="indicatorColor" format="color"/>
    </declare-styleable>

    <!--wangfangxu-->
    <!-- 倒影控件属性 -->
    <declare-styleable name="reflectItemView">
        <attr name="isReflect"  format="boolean" />
        <attr name="isShape"  format="boolean" />
        <attr name="reflect_height"  format="dimension" />
        <attr name="radius"  format="dimension" />
        <attr name="refle_spacing"  format="dimension" />
    </declare-styleable>
    <!--wangfangxu-->
</resources>
